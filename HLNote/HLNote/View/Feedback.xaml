<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HLNote.Feedback"
             Title="Send feedback">
    <ContentPage.ToolbarItems>
        <ToolbarItem  Text="Send" Clicked="SendOnClicked"/>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        
        <StackLayout >
            <StackLayout Orientation="Horizontal">
                <Image Source="gmail.png"></Image>
                <Label Text="hung1998pro@gmail.com" WidthRequest="200" Margin="20,20,10,10"/>
            </StackLayout>
            <Editor x:Name="bodyMail" Text="" Placeholder="Show we your problems or ideas" HeightRequest="500" Keyboard="Chat" Margin="20,5,10,10" Completed="EditorCompleted"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>