<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HLNote.PasswordPage"
             Title="Password">
    <ContentPage.Content>
        <StackLayout>
            <Entry  Placeholder="Password" TextChanged="editor_TextChanged"
                    IsPassword="True" x:Name="input">
            </Entry>
            <Button Text="OK" WidthRequest="50" HorizontalOptions="CenterAndExpand"
                 Clicked="OnLogin"/>
            <Button  Image="lock.png" Text="Forgot password?" Clicked="btn_ForgorPasswordCLicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>