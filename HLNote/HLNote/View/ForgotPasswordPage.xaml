<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HLNote.ForgotPasswordPage"
             Title="Forgot Password">
    <ContentPage.Content> 
        <StackLayout>
            <Label Text="Question" x:Name="question"></Label>
            
            <Entry  Margin="10" Placeholder="Answer" 
                    TextChanged="answer_TextChanged" 
                    x:Name="answer">
            </Entry>
            <Entry   Placeholder="Password" TextChanged="password_TextChanged" 
                     IsPassword="True" x:Name="newPassword">
            </Entry>
            <Entry   Placeholder="Reinput Password" TextChanged ="password2_TextChanged" 
                     IsPassword="True" x:Name="rePassword">
            </Entry>
            <Button Text="OK" WidthRequest="50" HorizontalOptions="CenterAndExpand" Clicked="OnComfirm"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>